# Copy this file to .env and update the values for your deployment

# Service ports (host:container)
BACKEND_PORT=5000
FRONTEND_PORT=3000
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Neo4j authentication is supplied as username/password
NEO4J_AUTH=neo4j/neo4j_password

# Backend model locations inside the container
GEMMA_BASE_PATH=/models
GEMMA_MODEL_PATH=/models/gemma-3n
GEMMA_ADAPTER_PATH=/models/gemma-3n
GEMMA_OFFLOAD_DIR=/offload
HOST_MODEL_DIR=./model-artifacts
BITSANDBYTES_FORCE_CPU=1

# Frontend build configuration
FRONTEND_API_URL=http://backend:5000/api

# Optional integrations
WANDB_API_KEY=
HF_TOKEN=
PIP_EXTRA_INDEX_URL=https://download.pytorch.org/whl/cpu
